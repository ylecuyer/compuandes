<div id="map" class="map"></div>
<script>
$(function(){
  
  var onRegionClick = function(e, code) {
    <% if @is_worldmap %>
      window.location = '/users/map/'+code;
    <% else %>
      window.location = '/users/country/'+code;
    <% end %>
  }

  $('#map').vectorMap({
    map: '<%= @map %>',
    onRegionClick: onRegionClick
  });
});
</script>
