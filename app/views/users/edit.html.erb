<%= simple_form_for @user do |f| %>
  <%= f.label :avatar, 'Imagen de perfil', class: 'label' %>
  <p class="control">
    <%= f.input_field :avatar %>
  </p>
  <%= f.input :last_name, label: 'Apellidos', wrapper: false %>
  <%= f.input :first_name, label: 'Nombres', wrapper: false %>
  <%= f.input :first_year, label: 'Primer año en', wrapper: false %>
  <%= f.input :facebook, label: 'Facebook', wrapper: false %>
  <%= f.input :linkedin, label: 'LinkedIn', wrapper: false %>

  <%= f.label :cv, label: 'Hoja de vida', class: 'label' %>
  <p class="control">
    <%= f.input_field :cv %>
  </p>

  <div id="personal-contact-tab-container" class="tabs is-boxed">
    <ul>
      <% @user.personal_contacts.each_with_index do |personal_contact, index| %> 
        <li><a href="#personal-contact-<%= index+1 %>">Contacto personal <%= index+1 %></a></li>
      <% end %>
    </ul>
  </div>
  <div id="personal-contact-tab-panel">
    <% @user.personal_contacts.each_with_index do |personal_contact, index| %> 
      <div id="personal-contact-<%= index+1 %>">
        <%= f.simple_fields_for :personal_contacts, personal_contact do |fa| %>
          <%= fa.input :address_1, label: 'Dirección 1', wrapper: false %>
          <%= fa.input :address_2, label: 'Dirección 2', wrapper: false %>
          <%= fa.input :address_3, label: 'Dirección 3', wrapper: false %>
          <%= fa.input :extra, label: 'Extra', wrapper: false %>
          <%= fa.input :country, label: 'País', wrapper: false %>
          <%= fa.input :state, label: 'Estado', wrapper: false %>
          <%= fa.input :zip_code, label: 'Código postal', wrapper: false %>
          <%= fa.input :city, label: 'Ciudad', wrapper: false %>
          <%= fa.input :phone, label: 'Teléfono fijo', wrapper: false %>
          <%= fa.input :mobile, label: 'Celular', wrapper: false %>
          <%= fa.input :email, label: 'Correo electrónico', wrapper: false %>
        <% end %>
      </div>
    <% end %>
  </div>

  <script type="text/javascript">
    $(function() {
      $('#personal-contact-tab-container').easytabs({
        animate: false,
        tabActiveClass: "is-active",
        panelContext: $("#personal-contact-tab-panel")
      });
    });
  </script>

  <div id="profesional-contact-tab-container" class="tabs is-boxed">
    <ul>
      <% @user.profesional_contacts.each_with_index do |profesional_contact, index| %> 
        <li><a href="#profesional-contact-<%= index+1 %>">Contacto profesional <%= index+1 %></a></li>
      <% end %>
    </ul>
  </div>
  <div id="profesional-contact-tab-panel">
    <% @user.profesional_contacts.each_with_index do |profesional_contact, index| %> 
      <div id="profesional-contact-<%= index+1 %>">
        <%= f.simple_fields_for :profesional_contacts, profesional_contact do |fa| %>
          <%= fa.input :company, label: 'Empresa', wrapper: false %>
          <%= fa.input :job, label: 'Cargo', wrapper: false %>
          <%= fa.input :company_website, label: 'Sitio web', wrapper: false %>
          <%= fa.input :address_1, label: 'Dirección 1', wrapper: false %>
          <%= fa.input :address_2, label: 'Dirección 2', wrapper: false %>
          <%= fa.input :address_3, label: 'Dirección 3', wrapper: false %>
          <%= fa.input :extra, label: 'Extra', wrapper: false %>
          <%= fa.input :country, label: 'País', wrapper: false %>
          <%= fa.input :state, label: 'Estado', wrapper: false %>
          <%= fa.input :zip_code, label: 'Código postal', wrapper: false %>
          <%= fa.input :city, label: 'Ciudad', wrapper: false %>
          <%= fa.input :phone, label: 'Teléfono fijo', wrapper: false %>
          <%= fa.input :mobile, label: 'Celular', wrapper: false %>
          <%= fa.input :email, label: 'Correo electrónico', wrapper: false %>
        <% end %>
      </div>
    <% end %>
  </div>

  <script type="text/javascript">
    $(function() {
      $('#profesional-contact-tab-container').easytabs({
        animate: false,
        tabActiveClass: "is-active",
        panelContext: $("#profesional-contact-tab-panel")
      });
    });
  </script>

  <p class="control">
    <%= f.button :submit, 'Guardar', class: 'button is-primary' %>
    <%= f.button :button, 'Borrar', :type => 'reset', :class => 'button is-link' %>
  </p>
<% end %>
